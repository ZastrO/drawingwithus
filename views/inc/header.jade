html(lang="en")
	<!--<![endif]-->
	head
		title Drawing With Us! #{title}
		link(rel="stylesheet", href="/css/darkly.bootstrap.css")
		link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
		link(rel="stylesheet", href="/css/style.css")
		link(rel="stylesheet", href="/css/colorpicker.css")

		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")

		meta(name="description", content=description)
		meta(name="keywords", content=keywords)
		meta(name="author", content=author)

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
	body
		nav.navbar.navbar-default.navbar-fixed-top
			div.container
				div.navbar-header
					button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/", title="DO IT. Don't let your DREAMS be DREAMS.") Drawing with Us! (ALPHA)

				div#navbar.navbar-collapse.collapse
					if !loggedIn 
						form.navbar-form.navbar-right(action="/login/", method="POST")
							div.form-group
								input.form-control(type="text", name="username", placeholder="Username")
								| &nbsp;
							div.form-group
								input.form-control(type="password", name="password", placeholder="Password")
								| &nbsp;
							button.btn.btn-success(type="submit") Sign in
						ul.nav.navbar-nav.navbar-right
							li: a(href="/register/", title="You know you want to!! Just click me!") Sign Up!
						script.
							localStorage.name = 'Guest';
					else 
						a.navbar-brand.pull-right(href="/logout/") Logout
						a.navbar-brand.pull-right(href="/u/" + username)= username
						script.
							localStorage.name = '#{username}';
					
				//.navbar-collapse